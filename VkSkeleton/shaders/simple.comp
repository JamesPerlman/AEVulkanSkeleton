#version 450

layout (set = 0, binding = 0) uniform sampler2D inputSampler;

layout (rgba8, set = 0, binding = 1) writeonly uniform image2D outputImage;

void main()
{
    vec2 uv = gl_GlobalInvocationID.xy / gl_WorkGroupSize.xy;

    vec4 color = texture(inputSampler, uv);
    
    imageStore(outputImage, ivec2(gl_GlobalInvocationID.xy), color);
}
